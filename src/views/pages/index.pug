        .content__block.movie
          .movie__adaptive-movie
            iframe.movie__elem(src="https://www.youtube.com/embed/3qkwqjljB8M" title="Установка дымохода"  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
      .content__wrap
        +section_title('Фото выполненных работ', 'content__title')
